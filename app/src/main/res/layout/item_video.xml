<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_video"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_6"
    android:layout_marginBottom="@dimen/margin_6">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/gray"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingLeft="@dimen/margin_12"
        android:paddingRight="@dimen/margin_12"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:layout_gravity="bottom"
        android:background="@color/viewfinder_mask">

        <TextView
            android:id="@+id/tv_theme"
            android:text="主题"
            android:textSize="@dimen/size_txt_body"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_4"
            android:ellipsize="end"
            android:lines="1"
            android:layout_alignParentBottom="true"/>

        <CheckBox
            android:id="@+id/cb_browse"
            android:text="0"
            style="@style/CardCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_theme"
            android:drawablePadding="@dimen/margin_4"
            android:drawableLeft="@mipmap/ic_play_arrow_white_24dp"/>

        <CheckBox
            android:id="@+id/cb_comment"
            android:text="0"
            style="@style/CardCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_theme"
            android:layout_toRightOf="@+id/cb_browse"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginBottom="2dp"
            android:drawablePadding="@dimen/margin_4"
            android:drawableLeft="@mipmap/ic_textsms_white_18dp"/>

        <CheckBox
            android:id="@+id/cb_duration"
            android:text="0"
            style="@style/CardCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_theme"
            android:layout_toRightOf="@+id/cb_comment"
            android:layout_marginLeft="@dimen/margin_16"
            android:drawablePadding="@dimen/margin_4"
            android:drawableLeft="@mipmap/ic_videocam_white_24dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>